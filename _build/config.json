{
  "name": "MODX Support Widget",
  "lowCaseName": "modxsupportwidget",
  "description": "Easy dashboard widget support form",
  "author": "matdave",
  "version": "1.0.0",
  "package": {
    "elements": {
      "widgets": [
        {
          "name": "modxsupport.widget",
          "description": "modxsupport.widget.desc",
          "content": "modxsupport.widget.php",
          "type": "file",
          "size": "half"
        }
      ]
    },
    "systemSettings": [
      {
        "key": "support_email",
        "type": "text",
        "area": "system",
        "value": "support@modxcloud.com"
      }
    ]
  },
  "build": {
    "readme": "docs/readme.txt",
    "license": "docs/license.txt",
    "changelog": "docs/changelog.txt"
  }
}